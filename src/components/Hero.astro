---
const personalImageAlt = "Mario Rodríguez"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/mario.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/mario-rodriguez-jurado-5b05a124b/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <!-- <Badge>Disponible para trabajar</Badge>-->
    </a>
  </div>
  <h1
    class="text-4x1 font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    Hola, soy Mario Rodríguez
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
     <strong
      >Licenciado en Ingenieria Informática</strong
    > en la Universidad Autónoma de Barcelona. Interesado en el desarrollo FullStack y metodologías DevOps.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:mario.rodriguezjurado23@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/mario-rodriguez-jurado-5b05a124b/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
